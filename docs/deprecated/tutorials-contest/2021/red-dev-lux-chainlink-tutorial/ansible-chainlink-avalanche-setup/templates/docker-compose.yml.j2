version: "3"
services:
  lux:
    command:
      ["/luxd/build/luxd", "--network-id=testnet", "--http-host="]
    hostname: luxd
    image: avaplatform/luxd:{{ luxdhash.stdout }}
    restart: always
    ports:
      - 9650:9650/tcp
      - 9651:9651/tcp
    volumes:
      - /root/.luxd:/root/.luxd
  chainlink:
    command:
      [
        "local",
        "n",
        "-p",
        "/chainlink/.password",
        "-a",
        "/chainlink/.api"
      ]
    environment:
      - ROOT=/chainlink
      - LOG_LEVEL=debug
      - ETH_CHAIN_ID=43113
      - MIN_OUTGOING_CONFIRMATIONS=2
      - LINK_CONTRACT_ADDRESS=0x0b9d5D9136855f6FEc3c0993feE6E9CE8a297846
      - CHAINLINK_TLS_PORT=0
      - SECURE_COOKIES=false
      - GAS_UPDATER_ENABLED=true
      - ALLOW_ORIGINS=*
      - ETH_URL=ws://localhost:9650/ext/bc/C/ws
      - DATABASE_URL=postgresql://chainlink:rediyeti@localhost:5432/chainlink?sslmode=disable
    extra_hosts:
      - host.docker.internal:host-gateway
    hostname: chainlink
    image: smartcontract/chainlink:0.10.3
    restart: always
    depends_on: 
      - postgres
      - lux
    ports:
      - 6688:6688/tcp
    volumes:
      - /root/.chainlink-lux:/chainlink
  postgres:
    environment:
      - POSTGRES_PASSWORD=rediyeti
      - POSTGRES_USER=chainlink
    hostname: postgres
    image: postgres
    restart: always
    ports:
      - 5432:5432/tcp
    volumes:
      - /root/postgres-data/:/var/lib/postgresql/data